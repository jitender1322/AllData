<!DOCTYPE html>
<html lang="en">
<head>
  <title>ShopEasy Products</title>
</head>
<body>
  <h1>ShopEasy Products</h1>

  <!-- Form to add a new product -->
  <h2>Add a New Product</h2>
  <form method="POST" action="/products/add">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" required><br><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required><br><br>

    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required><br><br>

    <button type="submit">Add Product</button>
  </form>

  <br><br>

  <!-- Filter Form for Products -->
  <form method="get" action="/products">
    <input type="text" name="category" placeholder="Category" />
    <input type="number" name="price" placeholder="Max Price" />
    <button type="submit">Filter</button>
  </form>

  <!-- Display Products -->
  <ul>
    <% products.forEach(product => { %>
      <li><%= product.name %> - $<%= product.price %> (<%= product.category %>)</li>
    <% }) %>
  </ul>

  <!-- Pagination -->
  <div>
    <% for(let i = 1; i <= Math.ceil(total / limit); i++) { %>
      <a href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
    <% } %>
  </div>
</body>
</html>
